{
  "require": {
    "ion-bazan/composer-diff": "^1.11",
    "laravel/installer": "^5.6",
    "statamic/cli": "^3.6"
  },
  "require-dev": {
    "friendsofphp/php-cs-fixer": "^3.65",
    "laravel/pint": "^1.16",
    "squizlabs/php_codesniffer": "*"
  },
  "minimum-statbility": "dev",
  "prefer-stable": true,
  "config": {
    "preferred-install": "dist",
    "sort-packages": true,
    "optimize-autoloader": true,
    "allow-plugins": {
      "ion-bazan/composer-diff": true
    }
  }
}
